<center>
    <form class="w-60 p-3" metgod="Post" asp-controller="Article" asp-action="Check">
        <fieldset control-id="ControlID-7">

            <div class="form-group">
                <label asp-for="Title" for="exampleInputEmail1" class="form-label mt-4"></label>
                <input asp-for="Title" class="form-control"  control-id="ControlID-9">
            </div>
            <div class="form-group">
                <label asp-for="ShortDescription"  for="exampleInputPassword1" class="form-label mt-4"></label>
                <input asp-for="ShortDescription" class="form-control" control-id="ControlID-10">
            </div>
            <div class="form-group">
                <label asp-for="Description"  for="exampleTextarea" class="form-label mt-4"></label>
                <textarea asp-for="Description" class="form-control" id="exampleTextarea" rows="3" control-id="ControlID-13"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Category" for="exampleSelect1" class="form-label mt-4"></label>
                @*<input asp-for="Category" class="form-control" control-id="ControlID-10">*@
                
                <select asp-for ="Category" class="form-select" id="exampleSelect1" control-id="ControlID-11">
                    @await Component.InvokeAsync("SelectCategory")
                </select>
            </div>
            <div class="form-group">
                <label asp-for="DateOfEvent" for="exampleSelect1" class="form-label mt-4"></label>
                <input asp-for="DateOfEvent" class="form-control" control-id="ControlID-10">
            </div>
            <div class="form-group">
                <label asp-for="Location" for="exampleTextarea" class="form-label mt-4"></label>
                <input asp-for="Location" class="form-control" id="exampleTextarea" rows="3" control-id="ControlID-13"></input>
            </div>

            <div class="form-group">
                <label asp-for="Picture" class="form-label mt-4">Default file input example</label>
                <input asp-for="Picture" class="form-control" type="file" id="formFile" control-id="ControlID-14">
            </div>
            <fieldset style="margin-top:10px;" class="form-group" control-id="ControlID-18">
                    <div class="form-check" >
                        <label asp-for="Published"></label>&nbsp &nbsp
                        <input asp-for="Published" type="checkbox" checked="" control-id="ControlID-19" value="true">
                    </div>
            </fieldset>
        
            <button type="submit" class="btn btn-primary" control-id="ControlID-28">Submit</button>
        </fieldset>
    </form>
